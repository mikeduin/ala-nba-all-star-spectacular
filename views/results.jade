extends layout

block content
  div.row
    table.col.s10.offset-s1.wagerTable
      thead
        tr.resultHead
          th(colspan=8).
            :: STANDINGS :: 
        tr.subHead.center-align
          th(colspan=8)
            i
              | Users will appear in the standings once they have placed a wager.
        tr
          th.
            Rank
          th.
            Entrant
          th.
            TOTAL $
          th.
            Rising Stars
          th.
            Skills Challenge
          th.
            Three-Point Contest
          th.
            Slam Dunk Contest
          th.
            All-Star Game
      tbody#results-body
        - var i=0
        for entrant in results
          - i++
          tr
            td=i
            td
              div.chip
                img(src=entrant.photo)
                =entrant.username  
            if entrant.total < 0
              - var dol = entrant.total.toString().substring(1)
              td.res-total='-$' + dol
            else
              td.res-total='$' + entrant.total
            if entrant.rising_stars >= 0
              td='$' + entrant.rising_stars
            else
              - var dol = entrant.rising_stars.toString().substring(1)
              td='-$' + dol
            if entrant.skills >= 0
              td='$' + entrant.skills
            else
              - var dol = entrant.skills.toString().substring(1)
              td='-$' + dol
            if entrant.three_pt >= 0
              td='$' + entrant.three_pt
            else
              - var dol = entrant.three_pt.toString().substring(1)
              td='-$' + dol
            if entrant.dunk >= 0
              td='$' + entrant.dunk
            else
              - var dol = entrant.dunk.toString().substring(1)
              td='-$' + dol
            if entrant.all_star >= 0
              td='$' + entrant.all_star
            else
              - var dol = entrant.all_star.toString().substring(1)
              td='-$' + dol
