extends layout

block content
  div.row
    div.col.s10.offset-s1
      table.wagerTable
        thead
          tr.resultHead
            th(colspan=8).
              :: ALL PICKS ::
          tr.subHead.center-align
            th(colspan=8)
              i
                | Picks will be revealed here once their event has locked for selection.
          tr
            th.select-pad
              select#user-filter.picks-filter
                option(selected value='all')
                  | All Users
                for user in users
                  option(value=user.username).
                    #{user.username}
            th.select-pad
              select#event-filter.picks-filter
                option(selected value='all')
                  | All Events
                option(value='Rising Stars Game')
                  | Rising Stars Game
                option(value='Skills Challenge')
                  | Skills Challenge
                option(value='Three-Point Contest')
                  | Three-Point Contest
                option(value='Dunk Contest')
                  | Dunk Contest
                option(value='All-Star Game')
                  | All-Star Game
            th.th-pad
              | Type
            th.th-pad
              | Wager
            th.th-pad
              | Odds
            th.th-pad
              | Risk
            th.th-pad
              | To Win
            th.th-pad
              | Result
        tbody#allPicksBody
          for wager in wagers
            if (moment()).isBefore(moment(wager.start_time))
              tr
                td=wager.username
                td=wager.event
                td=wager.type
                td=wager.wager
                td=wager.odds
                td=wager.risk
                td=wager.to_win
                - var total = Math.round(wager.net_total*100)/100
                td=total
