extends layout

block content
  div.row
    div.col.s10.offset-s1
      table.wagerTable
        thead
          tr.resultHead
            th(colspan=8).
              :: ALL PICKS ::
          tr.subHead.center-align
            th(colspan=8)
              i
                | Picks will be revealed here once their event has locked for selection.
          tr
            th
              | Username
            th
              | Event
            th
              | Type
            th
              | Wager
            th
              | Odds
            th
              | Risk
            th
              | To Win
            th
              | Result
        tbody
          for wager in wagers
            if (moment()).isAfter(moment(wager.start_time))
              tr
                td=wager.username
                td=wager.event
                td=wager.type
                td=wager.wager
                td=wager.odds
                td=wager.risk
                td=wager.to_win
                td=wager.net_total
