extends layout

block content
  div.row
    div.col.s9
      table.bordered#wagerTable
        thead
          tr
            th
              | Event
            th
              | Type
            th
              | Wager
            th
              | Odds
            th
              | Risk
            th
              | To Win
            th
              | Confirm
        tbody
          for wager in wagers
            tr              
              td=wager.event
              td=wager.type
              td.wager-col=wager.side
              td=wager.odds
              td.input-field.curr-col
                input.risk-input(type='number')
              td.curr-col.toWin
              td
                button.btn.pick-btn.hoverable.
                  PLACE BET
    div.col.s3
      div#ticket.z-depth-5
        div.center-align.header
          | YOUR TICKET
        br
        div#remaining.center-align
          if user
            | DOLLARS REMAINING:
            span#balance= '$' + user.balance
          else 
            | You are not logged in!
