doctype html
html
  head
    title= 'NBA All-Star Spectacular'
    link(rel='icon', href='/images/icon.jpg')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway:400,700,400italic,600')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
  body
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0&appId=1838943476378104&autoLogAppEvents=1"></script>
    ul#dropdown.dropdown-content
      li
        //- a(href=`/results/${year}`)
        a(href='/results/2017')
          | Standings
      li
        //- a(href=`/allpicks/${year}`)
        a(href=`/allpicks/2017`)
          | All Picks
      if user
        if user.admin === true
          li
            a(href=`/editlines/all/${year}`)
              | Edit Lines
    div.navbar-fixed
      nav.z-depth-3
        div.nav-wrapper
          a.sidenav-trigger(href='#' data-target='mobile-nav')
            i.fa.fa-bars
          a.brand-logo(href='/').
            NBA All-Star Spectacular
          ul.left.logo-lead.
            A Level Above presents
          ul.right.hide-on-med-and-down
            if user
              li='Welcome, ' + user.username
              li 
                a(href='/auth/logout')
                  | Logout
            else 
              li
                a.modal-trigger(href='#modal-login')
                  | Login
            li
              a(href='/rules')
                | Rules
            li
              //- a(href=`/picks/${year}`)
              a(href=`/picks/2017`)
                | Make Picks
            li
              a.dropdown-trigger(href='#!' data-target='dropdown')
                | Results 
            li
              a(href='http://www.alafantasysports.com')
                | ALA Home
    include includes/loginModal.jade 
    
    ul#mobile-nav.sidenav
      li.nav-div
        img#side-nav-logo(src='/images/all-star-17-logo.jpg')
      if user
        li.center-align='Welcome, ' + user.username
        li 
          a(href='/logout')
            | Logout
      else 
        li
          a(href='/auth/facebook')
            | Login
      li
        a(href='/rules')
          | Rules
      li
        //- a(href=`/picks/${year}`)
        a(href=`/picks/2017`)
          | Make Picks
      li
        //- a(href=`/results/${year}`)
        a(href='/results/2017')
          | Standings
      li
        a(href=`/allpicks/${year}`)
          | All Picks
      li
        a(href='http://www.alafantasysports.com' target='_blank')
          | ALA Home
    
    div.spacer
      block content
        
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js')
    script(src='https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
    script(src='/javascripts/script.js')
    script(src='/javascripts/formValidation.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.js')
