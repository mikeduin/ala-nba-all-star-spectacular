extends layout

block content
  div.row
    span=user.username + "'s Wagers'"
  div.row
    table.col.s10.striped
      thead
        tr
          th.
            Username
          th.
            Event
          th.
            Type
          th.
            Wager
          th.
            Odds
          th.
            Risked
          th.
            To Win
          th.
            Result
      tbody
        for wager in wagers
          tr
            td=wager.username
            td=wager.event
            td=wager.type
            td=wager.wager
            td=wager.odds
            td=wager.risk
            td=wager.to_win
            td=wager.result
              
